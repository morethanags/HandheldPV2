<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:columnCount="1"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="1"
    tools:context="com.huntloc.handheldpv2.PersonnelFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="20sp"
        android:layout_row="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Personnel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight=".25"
            android:gravity="left"
            android:text="@string/textView_Personnel_text"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/bandPBIPColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".15">

            <TextView
                android:id="@+id/textView_PBIP_Color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center"
                android:textSize="27sp"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_weight=".55"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageView_Portrait"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_weight=".5"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:maxHeight="400dp"
                android:maxWidth="400dp"
                android:minHeight="300dp"
                android:minWidth="300dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <Button
                    android:id="@+id/button_Entrance"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:layout_weight=".45"
                    android:text="@string/button_Entrance_text"
                    android:textSize="23sp" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight=".1" />

                <Button
                    android:id="@+id/button_Exit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:layout_margin="2dp"
                    android:layout_weight=".45"
                    android:text="@string/button_Exit_text"
                    android:textSize="23sp" />

            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3">

            <TextView
                android:id="@+id/textView_PBIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="left"
                android:text="@string/textView_PBIP_text"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView_PBIP_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="left"
                android:text=""
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/imageView_PBIP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textView_HazardousGoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="left"
                android:text="@string/textView_HazardousGoods_text"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView_HazardousGoods_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="left"
                android:text=""
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/imageView_HazardousGoods"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textView_PortSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="left"
                android:text="@string/textView_PortSecurity_text"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView_PortSecurity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:gravity="left"
                android:text=""
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/imageView_PortSecurity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:scaleType="fitXY" />
        </GridLayout>

</LinearLayout>

</GridLayout>
